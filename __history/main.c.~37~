#include <main.h>

#define BUT_1   input(PIN_B4)
#define BUT_2   input(PIN_B5)

int8 Q[]={0x7E,0xBD,0xDB,0xE7};
int a=0,b=0,c=0,d=0;
#INT_RB
void interrupt()
{
   while(1)
   {
   if(BUT_1==0)
   {
      a=1;
      while(BUT_1==0)
         {delay_ms(1);}
      while(a==1)
      {
         OUTPUT_BIT(PIN_D1,1);
         OUTPUT_BIT(PIN_D2,1);
         OUTPUT_BIT(PIN_D3,0);
         OUTPUT_BIT(PIN_D4,0);
         if(BUT_2==0)
            {
               a=0;
               break;
               while(BUT_2==0)
         {delay_ms(1);}
            }
      }
   }
   if(BUT_2==0)
   {
      b=1;
      while(BUT_2==0)
         {delay_ms(1);}
      while(b==1)
      {
         OUTPUT_BIT(PIN_D1,0);
         OUTPUT_BIT(PIN_D2,0);
         OUTPUT_BIT(PIN_D3,1);
         OUTPUT_BIT(PIN_D4,1);
         if(BUT_1==0)
            {
               b=0;
               break;
               while(BUT_1==0)
         {delay_ms(1);}
            }
      }
   }
}}

void main()
{
   output_d(0x00);
   clear_interrupt(INT_RB);
   enable_interrupts(INT_RB);
   enable_interrupts(GLOBAL);  
}
